.home .hero img
  max-width 450px!important

.column {
  float: left;
  width: 40%;
}

.row:after {
  content: "";
  display: table;
  clear: both;
}

@media screen and (max-width 640px) {
    .column{
      width: 50%; 
    }
  }

@media screen and (max-width 440px) {
    .column{
      width: 100%; 
    }
  }

/* Container holding the image and the text */
.home-image {
  position: relative;
  text-align: center;
  color: black;
}

/* Bottom left text */
.image-bottom-left {
  position: absolute;
  bottom: 16px;
  left: 16px;
}

/* Top left text */
.image-top-left {
  position: absolute;
  top: 8px;
  left: 16px;
}

/* Top right text */
.image-top-right {
  position: absolute;
  top: 8px;
  right: 16px;
}

/* Bottom right text */
.image-bottom-right {
  position: absolute;
  bottom: 8px;
  right: 16px;
}

/* Centered text */
.image-centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.link-on-image {
  color: white;
  font-weight: 600;
  font-size: 1rem;
  margin: 0.25rem 1rem 0.5rem 0;
  // float: left;
  display: block;
  text-shadow: 2px 0 0 black, -2px 0 0 black, 0 2px 0 black, 0 -2px 0 black, 1px 1px black, -1px -1px 0 black, 1px -1px 0 black, -1px 1px 0 black;
  // text-shadow: 2px 0 0 blak;
}

.link-on-image:hover {
  // text-shadow: 2px 0 0 gray, -2px 0 0 gray, 0 2px 0 gray, 0 -2px 0 gray, 1px 1px gray, -1px -1px 0 gray, 1px -1px 0 gray, -1px 1px 0 gray;
  color: #3eaf7c;
}

.img-link-column {
  float: left;
  text-align: left;
  width: 48%;
}

.img-link-row:after {
  content: "";
  display: table;
  clear: both;
}

.column-services {
  float: left;
  width: 30%;
  padding: 1rem 0 1rem 1rem;
}

.row-services:after {
  content: "";
  display: table;
  clear: both;
}

.home-image-width {
  width: 60%;
}

@media screen and (max-width 640px) {
    .column-services{
      width: 45%; 
    }
    .home-image-width {
      width: 80%  
    }
  }

@media screen and (max-width 440px) {
    .column-services{
      width: 100%; 
    }
    .home-image-width {
      width: 95%;
    }
  }